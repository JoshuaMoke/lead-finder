// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LeadStatus {
  NEW
  VALIDATED
  QUEUED
  CONTACTED
  BOOKED
  WON
  LOST
}

enum ActivityType {
  CALL
  EMAIL
  VISIT
  NOTE
}

model Lead {
  id         String       @id @default(cuid())
  name       String
  phone      String?      @db.VarChar(30)
  email      String?      @db.VarChar(255)
  website    String?      @db.VarChar(255)
  city       String?
  province   String?
  source     String?
  score      Int          @default(0)
  status     LeadStatus   @default(NEW)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  activities Activity[]
  tags       LeadTag[]

  @@index([status])
  @@index([score])
}

model Tag {
  id        String    @id @default(cuid())
  label     String    @unique
  createdAt DateTime  @default(now())
  leads     LeadTag[]
}

model LeadTag {
  leadId String
  tagId  String

  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([leadId, tagId])
}

model Activity {
  id      String       @id @default(cuid())
  type    ActivityType
  summary String
  when    DateTime     @default(now())
  leadId  String
  lead    Lead         @relation(fields: [leadId], references: [id], onDelete: Cascade)
}
